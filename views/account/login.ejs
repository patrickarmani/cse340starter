<!--   -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
 
    <% messages() %>
 
    <% if (errors) { %>
     <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
   <%  }) %>
    </ul>
   <% } %>
 
   <div class="login">
   <form id="loginForm" action="/account/login" method="post">
     <fieldset>
         <legend>My Account</legend>
         <label for="account_email">Email:</label>
         <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">

         <label for="account_password">Password:</label>
         <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

         <i class="form-italics">Password must contain at least 8 characters, 1 capital letter, 1 number and 1 special character.</i>
         <input type="submit" id="submit" value="Login">
         
         <span class="register-account">Don't have an account? <a href="/account/registration">Register</a></span>
     </fieldset>
 </form>
 </div>
 <script src="/js/script.js"></script>